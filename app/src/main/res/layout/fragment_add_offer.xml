<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_offer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lebs.lublin.repaircarauction.AddOffer">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="58dp"
        android:gravity="center_vertical"
        android:text="Samochód"
        app:layout_constraintBottom_toBottomOf="@+id/addOfferCarSpinner"
        app:layout_constraintEnd_toStartOf="@+id/addOfferCarSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addOfferCarSpinner" />

    <Spinner
        android:id="@+id/addOfferCarSpinner"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="81dp"
        android:layout_marginTop="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        android:entries="@array/carList"
        />

    <Spinner
        android:id="@+id/addOfferCitySpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="49dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        android:entries="@array/cityList" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="Ewakuator"
        app:layout_constraintBaseline_toBaselineOf="@+id/addOfferTowTruck"
        app:layout_constraintStart_toStartOf="@+id/textView2" />

    <CheckBox
        android:id="@+id/addOfferTowTruck"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="@+id/addOfferCarSpinner"
        app:layout_constraintTop_toBottomOf="@+id/addOfferCarSpinner" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="58dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="32dp"
        android:text="Jak to się stało (opis)"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/addOfferDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/addOfferDescription"
        android:layout_width="0dp"
        android:layout_height="81dp"
        android:layout_marginBottom="67dp"
        android:layout_marginEnd="58dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="71dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="@+id/addOfferCitySpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="198dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="58dp"
        android:gravity="center_vertical"
        android:text="Gdzie to się stało"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addOfferCitySpinner"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="Termin ważności"
        app:layout_constraintBottom_toBottomOf="@+id/addOffeDays"
        app:layout_constraintEnd_toStartOf="@+id/addOfferButton"
        app:layout_constraintStart_toStartOf="@+id/addOfferButton"
        app:layout_constraintTop_toTopOf="@+id/addOffeDays" />

    <EditText
        android:id="@+id/addOffeDays"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="31dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/addOfferButton"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/addOfferCitySpinner" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="Dni"
        app:layout_constraintBottom_toBottomOf="@+id/addOffeDays"
        app:layout_constraintEnd_toEndOf="@+id/addOfferCitySpinner"
        app:layout_constraintStart_toStartOf="@+id/addOfferCitySpinner"
        app:layout_constraintTop_toTopOf="@+id/addOffeDays" />

    <Button
        android:id="@+id/addOfferButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text=" Dodaj ogłoszenie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addOffeDays"
        app:layout_constraintStart_toStartOf="@+id/addOffeDays" />
</android.support.constraint.ConstraintLayout>
