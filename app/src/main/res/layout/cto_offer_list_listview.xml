<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginLeft="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">

        <ImageView
            android:id="@+id/ctoOfferLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/ctoOfferTitle"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ctoOfferLogo"
            android:text="Audi A6"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/ctoOfferLogo"
            app:srcCompat="@mipmap/clock_icon" />

        <TextView
            android:id="@+id/ctoDaysTerm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/ctoAuthorName"
            android:gravity="center_vertical"
            android:text="8 days" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_above="@+id/imageView2"
            android:layout_toEndOf="@+id/ctoOfferLogo"
            app:srcCompat="@mipmap/user_icon_foreground" />

        <TextView
            android:id="@+id/ctoAuthorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:text="Piotr Mazur" />
    </RelativeLayout>
</LinearLayout>
